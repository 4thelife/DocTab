<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/image_vista_perfil_doctor"
            android:layout_width="100dp"
            android:layout_height="100dp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="10sp">

            <TextView
                android:id="@+id/view_doctor_nombre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nombre del doctor"/>
            <TextView
                android:id="@+id/view_doctor_especialidad"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Especialidad del doctor"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/view_doctor_cedula_profesional"
                android:text="Cedula profesional"/>
            <TextView
                android:id="@+id/view_doctor_direccion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Direccion"
                />
            <TextView
                android:id="@+id/view_doctor_telefono"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Telefono"/>

        </LinearLayout>

    </LinearLayout>


</FrameLayout>