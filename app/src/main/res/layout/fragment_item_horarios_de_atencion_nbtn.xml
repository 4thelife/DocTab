<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="2dp"
        android:orientation="vertical">
        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/item_horarios_de_atencion_dia_nbtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="monospace"
                android:textColor="@color/bootstrap_brand_secondary_text"
                android:textStyle="bold"
                android:layout_marginEnd="10dp"
                android:text="Lunes"
                />

            <TextView
                android:id="@+id/item_horarios_de_atencion_hora_inicio_nbtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/bootstrap_brand_secondary_text"
                android:fontFamily="monospace"
                android:layout_marginEnd="10dp"
                android:text="7:00 AM"/>

            <TextView
                android:id="@+id/item_horarios_de_atencion_hora_fin_nbtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="monospace"
                android:textColor="@color/bootstrap_brand_secondary_text"
                android:layout_marginEnd="10dp"

                android:text="9:00 PM"/>
            <TextView
            android:id="@+id/item_horarios_de_atencion_duracion_nbtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="monospace"
            android:textColor="@color/bootstrap_brand_secondary_text"
            android:text="15"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/bootstrap_dropdown_divider" />
    </LinearLayout>

</FrameLayout>