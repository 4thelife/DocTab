<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/view_agendar_cita_doctor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="monospace"
            android:text="Nombre del doctor:"
            android:textColor="@android:color/black"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/view_agendar_cita_direccion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:fontFamily="monospace"
            android:textColor="@android:color/black"
            android:text="Direccion:"/>

        <TextView
            android:id="@+id/view_agendar_cita_fecha"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:fontFamily="monospace"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:text="Fecha:"/>

        <TextView
            android:id="@+id/view_agendar_cita_hora"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:fontFamily="monospace"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            android:text="Hora:"/>

        <TextView
            android:id="@+id/view_agendar_cita_telefono"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:fontFamily="monospace"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:text="Telefono:"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_vista_agendar_cancelar"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:backgroundTint="@color/bootstrap_brand_danger"
                android:fontFamily="monospace"

                android:text="@string/default_alert_dialog_cancelar"
                android:textColor="@color/bootstrap_brand_secondary_fill" />

            <Button
                android:id="@+id/btn_vista_cita_agendar"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:backgroundTint="@color/bootstrap_brand_primary"
                android:fontFamily="monospace"
                android:text="@string/btn_agendar"
                android:textColor="@color/bootstrap_brand_secondary_fill" />




        </LinearLayout>

    </LinearLayout>


</FrameLayout>