<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="2dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/item_citas_nombre_nbtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="monospace"
            android:textStyle="bold"
            android:text="Nombre del Paciente"
            android:textColor="@color/bootstrap_brand_secondary_text" />

        <TextView
            android:id="@+id/item_citas_asunto_nbtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="monospace"
            android:text="Asunto de la cita"
            android:textColor="@color/bootstrap_brand_secondary_text" />

        <TextView
            android:id="@+id/item_citas_fecha_nbtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="monospace"
            android:text="Fecha de cita"
            android:textColor="@color/bootstrap_brand_secondary_text" />

        <TextView
            android:id="@+id/item_citas_horario_nbtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="monospace"
            android:text="Horario de cita"
            android:textColor="@color/bootstrap_brand_secondary_text" />


        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/bootstrap_dropdown_divider" />

    </LinearLayout>

</FrameLayout>