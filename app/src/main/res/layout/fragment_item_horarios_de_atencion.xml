<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2dp"
        android:orientation="vertical">
        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">


                <TextView
                    android:id="@+id/item_horarios_de_atencion_dia"
                    android:layout_width="75dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="monospace"
                    android:textColor="@color/bootstrap_brand_secondary_text"
                    android:textStyle="bold"
                    android:layout_marginEnd="10dp"
                    android:text="Lunes"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="DE"
                    android:fontFamily="monospace"
                    android:textColor="@color/bootstrap_brand_secondary_text"
                    android:layout_marginEnd="10dp"/>
                <TextView
                    android:id="@+id/item_horarios_de_atencion_hora_inicio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/bootstrap_brand_secondary_text"
                    android:fontFamily="monospace"
                    android:layout_marginEnd="10dp"
                    android:text="7:00"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="A"
                    android:fontFamily="monospace"
                    android:textColor="@color/bootstrap_brand_secondary_text"
                    android:layout_marginEnd="10dp"/>

                <TextView
                    android:id="@+id/item_horarios_de_atencion_hora_fin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="monospace"
                    android:textColor="@color/bootstrap_brand_secondary_text"
                    android:layout_marginEnd="10dp"
                    android:text="9:00 PM"/>

                <TextView

                    android:id="@+id/item_horarios_de_atencion_duracion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="monospace"
                    android:textColor="@color/bootstrap_brand_secondary_text"
                    android:text="15"
                    android:visibility="gone"/>

            </LinearLayout>

            <ImageButton
                android:id="@+id/item_btn_eliminar_dia"
                style="@android:style/Widget.ImageButton"
                android:layout_width="50dp"
                android:layout_height="50dp"

                android:backgroundTint="@android:color/transparent"
                android:scaleType="centerCrop"
                app:srcCompat="@mipmap/delete_item" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/item_btn_editar_dia"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="@color/bootstrap_brand_primary"
                android:fontFamily="monospace"
                android:text="@string/button_editar"
                android:textColor="@color/bootstrap_brand_secondary_fill"
                android:visibility="gone"/>


        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/bootstrap_dropdown_divider" />
    </LinearLayout>



</FrameLayout>